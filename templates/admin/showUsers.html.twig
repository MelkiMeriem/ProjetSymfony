{% extends 'admin/admin.html.twig' %}

{% block sectionDocument %}
    <div class="container">
        <h1>List of Users</h1>
        <div class="row">
            {% for user in users %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ user.fullname }}</h5>
                            <p class="card-text">{{ user.email }}</p>
                            <!-- Add more user information here as needed -->
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_admin_showCampaigns', { 'userId': user.id, 'id':0 }) }}" class="btn btn-primary btn-sm mr-2">View Campaigns</a>
                                <a href="{{ path('app_admin_showFunds', { 'userId': user.id,'id':0 }) }}" class="btn btn-primary btn-sm mr-2">View Funds</a>
                                <a href="{{ path('app_admin_deleteUser', {'id' : user.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Funds Modal -->
                <div class="modal fade" id="fundsModal{{ loop.index }}" tabindex="-1" aria-labelledby="fundsModalLabel{{ loop.index }}" aria-hidden="true">
                    <!-- Modal content goes here -->
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block title %}
    Admin Users-Page
{% endblock %}
