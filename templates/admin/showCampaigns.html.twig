{% extends 'admin/admin.html.twig' %}

{% block sectionDocument %}
    <div class="container">
        <div class="row">
            {% for campaign in campaigns %}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <!-- Render image -->
                        <div class="card-body">
                            <h5 class="card-title">{{ campaign.CampaignName }}</h5>
                            <!-- Owner's name -->
                            {% if campaign.ownerId %}
                                <p>Owner: {{ campaign.ownerId.fullname }}</p>
                            {% endif %}
                            <!-- Button to trigger modal -->
                            <div class="mt-3">
                                <button class="btn btn-primary btn-sm mr-2" data-bs-toggle="modal" data-bs-target="#campaignModal{{ loop.index }}">
                                    View Details
                                </button>
                                <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('{{ campaign.id }}')">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Modal -->
               {{ include('admin/campaignModal.html.twig') }}
            {% endfor %}
        </div>
    </div>
{% endblock %}



{% block title %}

{% endblock %}
